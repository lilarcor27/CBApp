package com.lilarcor.planner;import android.app.*;import android.os.*;import android.view.*;import android.view.View.*;import android.widget.*;import android.content.*;import android.text.*;import android.text.style.*;import java.util.*;import java.lang.*;public class Tab0Activity extends Activity{//============================| Global Variables |=========================	private TextView[] TextV = null;	private ImageButton[] IButtonV = null;	private Button[] ButtonV = null;	private AlertDialog.Builder aDialog = null;		private HeritageAdministrator hA = null;//============================| Events |===================================	@Override	public void onCreate(Bundle savedInstanceState)	{			super.onCreate(savedInstanceState);		setContentView(R.layout.tabpage0);				setViews();		setTerrainImage();				hA = new HeritageAdministrator(this, handler);		hA.loadHeritageData(hA.tourKeys[MainActivity.CityKey % 12][MainActivity.CityKey % hA. tourKeys[MainActivity.CityKey % 12].length];);				final SpannableStringBuilder sps = new SpannableStringBuilder("아래 지도를 터치하세요.");		sps.setSpan(new AbsoluteSizeSpan(50), 7, 9, Spannable.SPAN_EXCLUSIVE_EXCLUSIVE);sps.setSpan(new ForegroundColorSpan(0xff40a940), 7, 9, Spannable.SPAN_EXCLUSIVE_EXCLUSIVE);TextV[0].append(sps);		TextV[1].setText("위 이미지를 클릭하세요." + "CityKey = " + MainActivity.CityKey % 12 + '\n' + "CityName = " + MainActivity.CityName[MainActivity.CityKey % 12]);	}			@Override	public boolean onKeyDown(int keyCode, KeyEvent event) { // return super.onKeyDown(keyCode, event);		if(keyCode != KeyEvent.KEYCODE_BACK) return super.onKeyDown(keyCode, event);		System.exit(0);		return true;	}		private void setViews()	{		TextV = new TextView[2];		IButtonV = new ImageButton[1];		ButtonV = new Button[1];		myOnClickListener onClickListener = new myOnClickListener(this, this);				TextV[0] = (TextView)findViewById(R.id.tab0text00);		TextV[1] = (TextView)findViewById(R.id.tab0text01);		IButtonV[0] = (ImageButton)findViewById(R.id.tab0imagebutton00);		//ButtonV[0] = (Button)findViewById(R.id.tab0button00);				IButtonV[0].setOnClickListener(onClickListener);//		ButtonV[0].setOnClickListener(onClickListener);	}		private void setTerrainImage()	{		int targetImage = -1;		switch(MainActivity.CityKey % 12) {		case 0: targetImage = R.drawable.terrain_0; break;		case 1: targetImage = R.drawable.terrain_1; break;		case 2: targetImage = R.drawable.terrain_2; break;		case 3: targetImage = R.drawable.terrain_3; break;		case 4: targetImage = R.drawable.terrain_4; break;		case 5: targetImage = R.drawable.terrain_5; break;		case 6: targetImage = R.drawable.terrain_6; break;		case 7: targetImage = R.drawable.terrain_7; break;		case 8: targetImage = R.drawable.terrain_8; break;		case 9: targetImage = R.drawable.terrain_9; break;		case 10: targetImage = R.drawable.terrain_10; break;		case 11: targetImage = R.drawable.terrain_11; break;		}		IButtonV[0].setImageResource(targetImage);		return;	}				class myOnClickListener implements OnClickListener	{		Context context;		Activity activity;		public myOnClickListener(Context context, Activity activity) {			this.context = context;			this.activity = activity;		}				@Override		public void onClick(View v) {			if(FileAdministrator.isOnline(activity) == false)				Toast.makeText(context, "데이터 네트워크 / WIFI 연결이 필요합니다.", 0).show();			else 				startActivity(new Intent(getApplicationContext(), RecommendRouteActivity.class));		}	}		Handler handler = new Handler() {	public void handleMessage(Message msg) {	TextV[0].setText(hA.getTextData(0));}};}/*AlertDialog.Builder alert = new AlertDialog.Builder(MyActivity.this);alert.setPositiveButton("확인", new DialogInterface.OnClickListener() {*/