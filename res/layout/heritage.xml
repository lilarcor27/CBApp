<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#f0f0f0">
	
	<ImageButton
		android:id="@+id/heritageimagebutton00"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingTop="5dp"
		android:adjustViewBounds="true"
		android:src="@drawable/moreimage"	/>		
				
	<ImageView
		android:id="@+id/heritageimage00"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="5"
		android:layout_marginBottom="5dp"
		android:layout_marginTop="5dp" />
		
	<ScrollView 
		android:layout_width="fill_parent"
		android:layout_weight="3"
		android:layout_height="fill_parent"	>	
		
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"	>
			
			<TextView
				android:id="@+id/heritagetext00"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="25sp"
				android:text="문화재"
				android:gravity="center"
				android:paddingTop="9dp"
				android:paddingLeft="5dp"
				android:paddingRight="5dp" />
				
			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:src="@drawable/summary_divider"	/>
				
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal" >

				<Button
					android:id="@+id/heritagesummarybutton00"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:layout_marginLeft="8dp"
					android:singleLine="true"
					android:background="#00000000"
					android:layout_weight="15"
					android:padding="10dp"
					android:text="개요"
					android:textColor="#40a940"
					android:textSize="30sp"	/>
					
				<ImageButton
					android:id="@+id/heritagesummaryimagebutton00"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_gravity="center"
					android:src="@drawable/direction_down"
					android:background="#00000000" />

					
			</LinearLayout>
			
			<TextView
				android:id="@+id/heritagetext01"
				android:visibility="gone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:text="개요 내용" />		
				
			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:src="@drawable/summary_divider"	/>
				
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal" >
				
				<Button
					android:id="@+id/heritagesummarybutton01"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:layout_marginLeft="8dp"
					android:singleLine="true"
					android:background="#00000000"
					android:layout_weight="15"
					android:padding="10dp"
					android:text="교통 정보"
					android:textColor="#40a940"
					android:textSize="30sp"	/>
				<ImageButton
					android:id="@+id/heritagesummaryimagebutton01"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_gravity="center_vertical|right"
					android:gravity="center"
					android:src="@drawable/direction_down"
					android:background="#00000000" />
				
					
			</LinearLayout>

			<TextView
				android:id="@+id/heritagetext02"
				android:visibility="gone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:text="개요2 내용" />
				
			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:src="@drawable/summary_divider"	/>
				
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal" >

				<Button
					android:id="@+id/heritagesummarybutton02"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:layout_marginLeft="8dp"
					android:singleLine="true"
					android:background="#00000000"
					android:layout_weight="15"
					android:padding="10dp"
					android:text="맛집"
					android:textColor="#40a940"
					android:textSize="30sp"	/>
					
				<ImageButton
					android:id="@+id/heritagesummaryimagebutton02"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_gravity="center_vertical|right"
					android:src="@drawable/direction_right"
					android:background="#00000000" />
		
			</LinearLayout>
				
			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:src="@drawable/summary_divider"	/>
				
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal" >

				<Button
					android:id="@+id/heritagesummarybutton03"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:layout_marginLeft="8dp"
					android:singleLine="true"
					android:background="#00000000"
					android:layout_weight="15"
					android:padding="10dp"
					android:text="숙박지"
					android:textColor="#40a940"
					android:textSize="30sp"	/>
					
				<ImageButton
					android:id="@+id/heritagesummaryimagebutton03"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_gravity="center_vertical|right"
					android:src="@drawable/direction_right"
					android:background="#00000000" />
		
			</LinearLayout>
				
			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:src="@drawable/summary_divider"	/>
				
		</LinearLayout>
	</ScrollView>
</LinearLayout>
